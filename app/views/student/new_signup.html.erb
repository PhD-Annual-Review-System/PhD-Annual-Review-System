<%= form_for(@student, url: student_signup_path) do |f| %>
    <div class="field">
      <%= f.label :FirstName %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :LastName %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :UIN %>
      <%= f.text_field :UIN %>
    </div>

    <div class="field">
      <%= f.label :emailID %>
      <%= f.text_field :email_id %>
    </div>
  
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  
  
    <div class="actions">
      <%= f.submit 'Sign Up' %>
    </div>

    <% if @student.errors.any? %>
