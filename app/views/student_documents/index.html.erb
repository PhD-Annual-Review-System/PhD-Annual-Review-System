<p style="color: green"><%= notice %></p>
<div class="header">
  <%= stylesheet_link_tag 'document/main.css' %>
  <h1>Submit Documents</h1>
</div>

<div class="container">

<%= form_for(@student_document, url: student_documents_path, method: :get) do |f| %>   

<div>
  <p> First name: <%=  @student_data.first_name %> </p>
  <p> Last name: <%=  @student_data.last_name %> </p>
  <p> Email Id: <%=  @student_document.email_id %> </p>
  <p> UIN: <%=  @student_data.UIN %> </p>
 </div> 
 <% end %>

 <%= form_for(@student_document, url: student_documents_path, method: :patch) do |f| %>   
 <table>
      <tr>
        <th><%= f.label :phd_start_date %></th>
        <td>
          <select name="student_document[phd_start_date]" id="student_document_phd_start_date" class="form-control">
            <option value="">Select a date</option>
            <% current_year = Time.now.year %>
            <% (current_year..current_year + 2).each do |year| %>
              <optgroup label="<%= year %>">
                <option value="Spring <%= year %>">Spring <%= year %></option>
                <option value="Fall <%= year %>">Fall <%= year %></option>
                <option value="Summer <%= year %>">Summer <%= year %></option>
              </optgroup>
            <% end %>
          </select>
        </td>
      </tr>
      <tr>
        <th><%= f.label :milestones_passed %></th>
        <td><%= f.text_area :milestones_passed %></td>
      </tr>
      <tr>
        <th><%= f.label :improvement_plan_present %></th>
        <td><%= f.text_field :improvement_plan_present %></td>
      </tr>
      <tr>
        <th><%= f.label :improvement_plan_summary %></th>
        <td><%= f.text_area :improvement_plan_summary %></td>
      </tr>
      <tr>
        <th><%= f.label :gpa %></th>
        <td><%= f.text_field :gpa %></td>
      </tr>
      <tr>
        <th><%= f.label :support_in_last_sem %></th>
        <td><%= f.text_area :support_in_last_sem %></td>
      </tr>
      <tr>
        <th><%= f.label :number_of_paper_submissions %></th>
        <td><%= f.number_field :number_of_paper_submissions %></td>
      </tr>
      <tr>
        <th><%= f.label :number_of_papers_published %></th>
        <td><%= f.number_field :number_of_papers_published %></td>
      </tr>
    </table>
   <div class="field">
     <%= f.label :"Resume" %>
     <%= f.file_field :resume_file,  id: "resume_file" %>
   </div>

   <div class="field">
     <%= f.label :"Report" %>
     <%= f.file_field :report_file,  id: "report_file" %>
   </div>

   <div class="actions">
     <%= f.submit 'Submit', class: 'btn',id: "submit" %>
   </div>

</div>
   
 <% end %>
