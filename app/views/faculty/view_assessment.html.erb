<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'faculty/facultydashboard' %>
  <title>View Assessment</title>
</head>
<body>
  <div class="header">
    <h1>View Assessment</h1>
    <%= link_to 'Back to Dashboard', faculty_dashboard_path, class: 'dashboard-link' %>
  </div>

  <div class="container">
    <% if flash[:error].present? %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>

    <h2>Assessment for <%= @student.first_name %> <%= @student.last_name %></h2>

    <% if @assessment.present? %>
      <h3>Comment for Student</h3>
      <p><%= @assessment.public_comment.present? ? @assessment.public_comment : 'No comment made for the student' %></p>

      <h3>Comment for Faculty</h3>
      <p><%= @assessment.private_comment.present? ? @assessment.private_comment : 'No comment made for the faculty' %></p>

      <h3>Rating</h3>
      <p><%= @assessment.rating.present? ? @assessment.rating : 'No rating provided' %></p>

      <h3>Eligible for Reward</h3>
      <p><%= @assessment.eligible_for_reward ? 'Yes' : 'No' %></p>
    <% else %>
      <p>No assessment found for this student.</p>
    <% end %>
  </div>
</body>
</html>
